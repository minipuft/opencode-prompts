{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["ES2022"],
    "types": ["node", "jest"]
  },
  "include": ["src/**/*", ".opencode/plugin/**/*", "tests/**/*"],
  "exclude": ["node_modules", "core", "dist"]
}
