{
  "$comment": "Auto-generated by opencode-prompts for oh-my-opencode integration",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 node_modules/claude-prompts/hooks/prompt-suggest.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*prompt_engine*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 node_modules/claude-prompts/hooks/post-prompt-engine.py"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 node_modules/claude-prompts/hooks/pre-compact.py"
          }
        ]
      }
    ]
  }
}