{
  "name": "opencode-prompts",
  "version": "1.4.0",
  "description": "OpenCode plugin for claude-prompts MCP server - chain tracking, gate reminders, and state preservation",
  "type": "module",
  "main": "./dist/src/cli/index.js",
  "bin": {
    "opencode-prompts": "./dist/src/cli/index.js"
  },
  "files": [
    "dist",
    ".opencode",
    "src",
    "README.md"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:e2e": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/e2e/",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "release": "npm run build && npm test && npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/minipuft/opencode-prompts.git"
  },
  "keywords": [
    "opencode",
    "plugin",
    "mcp",
    "prompts",
    "chains",
    "gates",
    "claude-code",
    "oh-my-opencode"
  ],
  "author": "minipuft",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "claude-prompts": "^1.4.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^22.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0",
    "typescript": "^5.9.3"
  }
}
